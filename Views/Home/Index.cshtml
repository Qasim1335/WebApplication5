@{
    ViewData["Title"] = "Home Page";
    var user = "Qasim";

    var cards = new List<(string Title, string Description)>
    {
        ("Learn ASP.NET Core", "Master building powerful web apps using C# and Razor."),
        ("Practice C#", "Sharpen your C# logic and OOP fundamentals."),
        ("Explore LINQ", "Filter, map, and query like a boss."),
        ("Deploy Website", "Go live with your dynamic website 🚀")
    };
}

@if (user != "Qasim")
{
    <div class="text-center">
        <h1><strong>Incorrect User :(</strong></h1>
    </div>
}
else
{
    <div class="text-center">
        <h1>Welcome to My Dynamic Website</h1>
        <p>This is the Home Page of my Website.</p>
        <p>Use the sidebar to navigate through different sections.</p>
        <p class="text-muted">Today is <strong>@DateTime.Now.ToString("dddd, dd MMMM yyyy")</strong></p>
    </div>

    <div class="card-container">
        @foreach (var card in cards)
        {
            <div class="card">
                <h2>@card.Title</h2>
                <p>@card.Description</p>
                <button>Explore</button>
            </div>
        }
    </div>


